{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "make: all",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "all"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "taskName": "make: clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": "$gcc"
        }
    ]
}